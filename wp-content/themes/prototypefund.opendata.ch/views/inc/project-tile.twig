<div style="opacity:0;" data-title="{{ post.post_title }}" class="isotope-item flip-container tile-link {{ post.filters }} twitter-retweet-link col-xs-24 col-sm-12 col-md-8 col-lg-6 no-padding" data-type="ptf-project" {% if projects_active == true %} data-href="{{ post.link }}"{% endif %} >
    <div class="flipper tile ptf-project {% if projects_active == true %} active {% endif %}">
        <div class="tile-click-area"></div>
        <div class="front">
            <div class="project-image">
                {% if(post.thumbnail) %}
                    <img src="{{post.thumbnail.src('ptf-project')}}" alt="{{post.title}}" />
                {% else %}
                    <img src="{{ theme.link }}/library/images/prototypefund-project-default.png" alt="{{post.title}}" />
                {% endif %}
            </div>
            <div class="tile-hover"></div>
            <div class="inner-wrapper">
                <div class="top-align">
                    <div class="title col-xs-20 col-sm-20 no-padding">
                        {{ post.post_title }}
                    </div>
                    <div class="info col-xs-20 col-sm-20 no-padding">
                        <div class="user">
                            {% for item in post.get_field('members') %}
                                {% if item.url %}
                                    <a href="{{item.url}}" target="_blank">{{item.name}}</a>
                                {% else %}
                                    {{item.name}}
                                {% endif %}
                                {% if(loop.last == false) %},{% endif %}
                            {% endfor %}
                            &nbsp;
                                            <span class="categories">
                                                {% for item in post.cats %}
                                                    #{{item.name}}&nbsp;
                                                {% endfor %}
                                            </span>
                        </div>
                    </div>
                    <div class="text col-xs-23 col-md-23 no-padding">
                        {{ post.excerpt }}
                    </div>
                </div>
            </div>
            <div class="svg-icon svg-icon-project svg-news-topost svg-news-topost-dims"></div>
        </div>
    </div>
</div>