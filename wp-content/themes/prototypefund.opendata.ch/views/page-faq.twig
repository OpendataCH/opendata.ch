{% extends "base-page-2020.twig" %}

{% block content %}
	<main class="page-2020-wrap">
		{% include 'views/inc/page-intro-block.twig' %}
		<div class="row filter-wrap" data-filter="">
			{% if post.meta('faq_sections') %}
				{% for section in post.meta('faq_sections') %}
					<div class="col-xs-24">
						<h2>{{ section.section_headline }}</h2>
					</div>
					<div class="col-xs-24">
						{% if section.faq_items %}
							{% for item in section.faq_items %}
								<div id="{{ item.id }}" class="filter-tab">
									<div class="filter-tab-header">
										<button aria-expanded="false" id="filter-tab-button-{{ loop.parent.index0 }}-{{ loop.index0 }}" aria-controls="filter-tab-content-{{ loop.parent.index0 }}-{{ loop.index0 }}">
											<h3 class="h4 filter-headline">
												{{ item.headline }}
											</h3>
										</button>
									</div>
									<div role="region"
										id="filter-tab-content-{{ loop.parent.index0 }}-{{ loop.index0 }}"
										aria-labelledby="filter-tab-button-{{ loop.parent.index0 }}-{{ loop.index0 }}"
										class="filter-tab-content"
										style="height: 0px; display: block;">
										<div class="filter-tab-content-inner row">
											<div class="col-xs-24 col-md-12">
												{{ item.content }}
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						{% endif %}
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</main>
{% endblock %}
